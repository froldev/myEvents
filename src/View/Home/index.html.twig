{% extends 'layout.html.twig' %}

{% block title %}Olympic Nantais || Programmation{% endblock %}

{% block content %}

    <section id="content">

    {% include 'Blocks/_carousel.html.twig' %}
    <h1>Programmation :</h1>

    <div id="search" class="py-3">
        {% include 'Blocks/_search.html.twig' %}
    </div>

    <div id="events" class="py-3">
        <div class="row">
            {% if events is empty %}
                <p id="no-events">Il n'y a pas encore d'évènements de prévus.</p>
            {% else %}
                {% for event in events %}
                    <div class="card m-1 p-2 col-4">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="{{ event.image }}" class="card-img img-max-height" alt="">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h4 class="card-title">{{ event.title|upper }}</h4>
                                    <div class="card-overflow">
                                        <p class="card-text">Le {{ event.date_time|date("d/m/Y") }}</p>
                                        <p class="card-text"> {{ event.description }}</p>
                                    </div>
                                    <a class="btn btn-primary btn-lg mb-2" href="/olympic/event/{{ event.id }}">
                                        En voir plus
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    </section>

{% endblock %}

{% block javascript %}

{% endblock %}
