{% extends 'adminLayout.html.twig' %}

{% block title %}Olympic Nantais || Liste des catégories{% endblock %}

{% block content %}

    <section id="navbarList">

        <h1>Liste des Menus :</h1>
        <div class="row">
            <table class="table col-12">
                <thead class="table-striped">
                    <tr class="bg-warning">
                        <th scope="col">Nom du menu :</th>
                        <th scope="col">Ordre :</th>
                        <th scope="col">Modifier :</th>
                    </tr>
                </thead>
                <tbody>
                {% for navbar in navbars %}
                    <tr>
                        <td>{{ navbar.text }}</td>
                        <td>{{ navbar.list }}</td>
                        <td>
                            <a class="btn btn-outline-success" href="/navbar/edit/{{ navbar.id }}">Mise à jour</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>

{% endblock %}
