{% extends 'adminLayout.html.twig' %}

{% block content %}

    <section>
        <div class="row">

            <h1>Menu à modifier :</h1>
            <form method="POST" class="col-12">
                <div class="form-group">
                    <label class="form-label">Nom du menu (max 25 caractères) :</label>
                    <input type="text" class="form-control {% if textError is not null %}is-invalid{% endif %}"
                           id="text" name="text" aria-describedby="inputMiseAJourDeLaCatégorie"
                           value="{{ navbar.text }}">
                    <div class="invalid-feedback">
                        {{ textError }}
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-warning btn-lg mb-2">Modifier</button>
            </form>
        </div>
        <a class="btn btn-dark mt-5" href="/navbar/list"> << Retour</a>
    </section>

{% endblock %}