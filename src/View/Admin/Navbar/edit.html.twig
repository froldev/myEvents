{% extends 'adminLayout.html.twig' %}

{% block content %}

    <section>
        <div class="row">

            <h1>Menu à modifier :</h1>
            <form method="POST" class="col-12">
                <div class="form-group">
                    <label class="form-label">Nom du menu :</label>
                    <input type="text" class="form-control" id="text" name="text"
                           aria-describedby="inputMiseAJourDeLaCatégorie" value="{{ navbar.text }}">
                </div>
                <div class="form-group">
                    <label class="form-label">Ordre :</label>
                    <select class="form-control" id="list" name="list" aria-describedby="inputMiseAJourDeLaCatégorie" >
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-outline-warning btn-lg mb-2">Modifier</button>
            </form>
        </div>
        <a class="btn btn-dark mt-5" href="/navbar/list"> << Retour</a>
    </section>

{% endblock %}