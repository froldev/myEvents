{% extends "adminLogin.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}

    <form role="form" action="/admin/login" method="POST" class="form-signin">
        {% if society.logo is not empty %}
        <img class="mb-4" src="{{society.logo}}" alt="logo {{society.text}}" width="200">
        {% endif %}
        <h2 class="h3 mb-3 font-weight-normal">
            Veuillez entrer votre identifiant et votre mot de passe :
        </h2>
        <div class="form-group">
            <label>Identifiant :</label>
            <input type="email" id="email" name="email" class="form-control
                {% if errorMail is not null %}is-invalid{% endif %}">
            <div class="invalid-feedback mx-auto">
                {{ errorMail }}
            </div>
        </div>
        <div class="form-group">
            <label>Mot de passe :</label>
            <input type="password" id="password" name="password" class="form-control
                {% if errorMdp is not null %}is-invalid{% endif %}"">
            <div class="invalid-feedback mx-auto">
                {{ errorMdp }}
            </div>
        </div>
        <div>
            <div class="invalid-feedback error-connexion mx-auto">
                {{ errorConnexion }}
            </div>
        </div>
        <div>
            <button class="col-3 btn btn-lg btn-outline-danger">
                <a class="text-white" href="/">Retour</a>
            </button>
            <button type="submit" class="col-6 btn btn-lg btn-outline-primary ml-5">
                Connexion
            </button>
        </div>

    </form>
{% endblock %}