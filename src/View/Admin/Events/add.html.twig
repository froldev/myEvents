{% extends "adminLayout.html.twig" %}

{% block title %}Nouvel évènement{% endblock %}


{% block content %}

<section>
    <div class="row">

        <h1>Ajouter un nouvel évènement</h1></br>
        <form method="POST" class="col-12">
            <div class="form-group">
                <label for="category" class="form-label">Catégorie :</label>
                <select name="category" class="form-control mb-3">
                    <option value=""></option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.category }}</option>
                    {% endfor %}
                </select>
                <a class="btn btn-primary text-white" href="/categories/add">Créer</a>
                <div class="invalid-feedback">
                    {{ categoryError }}
                </div>
            </div>
            <div class="form-group">
                <label for="Title">Nom de l'artiste/du groupe/de l'évènement :</label>
                <input type="text" class="form-control {% if titleError is not null %}is-invalid{% endif %}" id="Title" name="title" aria-describedby="emailHelp">
                <div class="invalid-feedback">
                    {{ titleError }}
                </div>
            </div>
            <div class="form-group">
                <label for="start">Date:</label>
                <input type="date" id="start" name="date_time"
                       class="form-control {% if dateError is not null %}is-invalid{% endif %}">
                <div class="invalid-feedback">
                    {{ dateError }}
                </div>
            </div>
            <div class="form-group">
                <label for="hour">Hour:</label>
                <input type="time" id="hour" name="hour"
                       class="form-control {% if hourError is not null %}is-invalid{% endif %}">
                <div class="invalid-feedback">
                    {{ hourError }}
                </div>
            </div>
            <div class="form-group {% if descriptionError is not null %}is-invalid{% endif %}">
                <label for="description">Description :</label></br>
                <textarea name="description" class="form-control" rows="5"></textarea>
                <script>
                    CKEDITOR.replace( 'description' );
                </script>
                <div class="invalid-feedback">
                    {{ descriptionError }}
                </div>
            </div>
            <div class="form-group">
                <label for="price">Prix (à partir de) :</label>
                <input type="text" class="form-control {% if priceError is not null %}is-invalid{% endif %}" name="price" id="price">
                <div class="invalid-feedback">
                    {{ priceError }}
                </div>
            </div>
            <div class="form-group">
                <label for="image">Visuel de l'évènement:</label>
                <input type="text" class="form-control {% if imageError is not null %}is-invalid{% endif %}" name="image" id="image">
                <div class="invalid-feedback">
                    {{ imageError }}
                </div>
            </div>
            <div class="form-group">
                <label for="video">Vidéo (code intégration YouTube) :</label>
                <input type="text" class="form-control" name="video" id="video">
            </div>
            <div class="form-group">
                <label for="link">Lien de réservation : </label>
                <br>
                <a class="btn btn-dark" href="https://www.ticketmaster.fr/fr/nantes" target="—blank">
                    Site de réservation >>
                </a>
                <input type="text" class="form-control" name="link" id="link">
            </div>
            <button type="submit" class="btn btn-primary">Ajouter à la liste</button>
        </form>

    </div>
</section>

    <button type="submit" class="btn btn-dark mb-2">
        <a class="text-white" href="/events/list"> << Retour</a>
    </button>

{% endblock %}

